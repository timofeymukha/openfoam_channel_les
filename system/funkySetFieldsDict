FoamFile
{
    version         2.0;
    format          ascii;

    root            "";
    case            "";
    instance        "";
    local           "";

    class           dictionary;
    object          funkySetFieldsDict;
}

// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

retau 1000;
reb #eval{1/5e-5}; 

expressions
(
    perturbations
    {
        eps 3e-2;
        kx 8;
        kz 9;
        utau 5.00256e-02;
        nu 5e-5;

//alpha #eval{$kx * 8};
//beta #eval{$kz * 4 / 3};

        field U;
        expression "vector($utau /0.41*log(1.0 + dist() * $utau / $nu) + $utau * 5.5 + $eps * $kz * sin($kx * pos().x) * cos($kz * pos().z), $eps * sin($kx * pos().x) * sin($kz * pos().z), -1 * $eps * $kx * cos($kx * pos().x) * sin($kz * pos().z))";
    }
);


